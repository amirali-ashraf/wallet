@using Wallet.Models.WalletModels
@model Wallet.Models.DBViewModels.AddRecordViewModel

<div class="row">
    <div class="col-md-12 text-center" >
        <h4 style="color: darkgreen; background-color: lightgreen;padding:10px">
            Total Income: @Model.Transactions.Where(T=>T.Category.TypeOfCategory == Category.Type.Income).Select(t=>t.TransationValue).Sum().ToString("0,0")
        </h4>
        <h4 style="color: darkred; background-color: lightcoral;padding:10px">
            Total Expenditure: @Model.Transactions.Where(T => T.Category.TypeOfCategory == Category.Type.Expenditure).Select(t => t.TransationValue).Sum().ToString("0,0") <br />
        </h4>        
    </div>
    
</div>
<div class="row">
    <div class="col-md-4 text-center">
        <p>Income vs. Expenditure</p>
        <canvas id="myChart" width="100" height="100"></canvas>
    </div>
    <div class="col-md-4 text-center">
        <p>Income</p>
        <canvas id="incomeChart" width="100" height="100"></canvas>
    </div>
    <div class="col-md-4 text-center">
        <p>Expenditure</p>
        <canvas id="expenditureChart" width="100" height="100"></canvas>
    </div>
</div>
