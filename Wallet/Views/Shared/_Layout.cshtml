<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Wallet </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-info fixed-top">
        @Html.ActionLink("Wallet", "Index", "Home", null, new { @class = "navbar-brand" })
        <button  class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new {@class = "nav-link"})</li>
                @if (Request.IsAuthenticated)
                {


                    <li class="nav-item">@Html.ActionLink("New Transacrion", "DailyRecords", "DailyRecords", null, new {@class = "nav-link", @style = "font-weight:bold"})</li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Management Tools
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            @Html.ActionLink("Categories and Subcategories", "CategoriesManagement", "ManageCatsAndSubs", null, new {@class = "dropdown-item"})
                            <div class="dropdown-divider"></div>
                            @Html.ActionLink("Wallet and Banks", "WalletAndBanks", "WalletAndBanks", null, new {@class = "dropdown-item"})
                        </div>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Reporting Tools
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            @Html.ActionLink("Transactions Report", "ReportViewer", "Report", null, new { @class = "dropdown-item" })
                            <div class="dropdown-divider"></div>
                            @Html.ActionLink("Wallet And Bank Reports", "BankReport", "BankReport", null, new { @class = "dropdown-item" })
                        </div>
                    </li>
                }


                <li class="nav-item">@Html.ActionLink("About", "About", "Home", null, new {@class = "nav-link"})</li>
                <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", null, new {@class = "nav-link"})</li>

                @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                {
                    <li class="nav-item">@Html.ActionLink("RolesAdmin", "Index", "RolesAdmin", null, new {@class = "nav-link"})</li>
                    <li class="nav-item">@Html.ActionLink("UsersAdmin", "Index", "UsersAdmin", null, new {@class = "nav-link"})</li>
                }
                @*<li class="nav-item active">
                        <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                    </li>*@
                @*<li class="nav-item">
                        <a class="nav-link" href="#">Link</a>
                    </li>*@
                @*<li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Management Tools
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            @Html.ActionLink("Categories and Subcategories", "CategoriesManagement", "ManageCatsAndSubsRepository", null, new { @class = "nav-link dropdown-item" })
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Banks</a>
                            <a class="dropdown-item" href="#">Wallets</a>
                        </div>
                    </li>*@
                @*<li class="nav-item">
                        <a class="nav-link disabled" href="#">Disabled</a>
                    </li>*@
            </ul>
            @Html.Partial("_LoginPartial")
            @*<form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>*@
        </div>
    </nav>


    <div class="body-content"> 
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Wallet</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
